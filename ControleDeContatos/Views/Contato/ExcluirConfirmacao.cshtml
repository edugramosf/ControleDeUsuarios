@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão do contato";
}

<div class="text-center">
    <h3>Deseja realmente EXCLUIR o contato @Model.Nome?</h3>
</div>

<div class="d-grid gap-2">
<a class="btn btn-outline-primary" role="button" asp-action="Index" asp-controller="Contato">Cancelar</a>
<a class="btn btn-outline-danger" role="button" asp-action="Excluir" asp-controller="Contato" asp-route-id="@Model.Id">Excluir</a>
</div>

